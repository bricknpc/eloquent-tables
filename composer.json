{
  "$schema": "https://getcomposer.org/schema.json",
  "name": "bricknpc/eloquent-tables",
  "type": "library",
  "description": "Eloquent tables for Laravel.",
  "keywords": [
    "Eloquent",
    "Table",
    "DataTable",
    "Laravel",
    "Pagination",
    "Filtering",
    "Sorting"
  ],
  "version": "1.1.0",
  "license": "MIT",
  "require": {
    "php": "^8.4|^8.5",
    "ext-intl": "*",
    "illuminate/database": "^12.0",
    "illuminate/support": "^12.0",
    "illuminate/http": "^12.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.5.3",
    "friendsofphp/php-cs-fixer": "^3.89",
    "orchestra/testbench": "^10.6",
    "phpstan/phpstan": "^2.1"
  },
  "autoload": {
    "psr-4": {
      "BrickNPC\\EloquentTables\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "BrickNPC\\EloquentTables\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "cs": "php vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes",
    "ps": "php vendor/bin/phpstan analyse --memory-limit=2G -c phpstan.neon",
    "test": "php vendor/bin/phpunit -c phpunit.xml --colors=always --coverage-html tests/coverage/html"
  },
  "extra": {
    "laravel": {
      "providers": [
        "BrickNPC\\EloquentTables\\Providers\\EloquentTablesServiceProvider"
      ]
    }
  }
}
